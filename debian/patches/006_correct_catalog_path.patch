 	  if [ -f $$ldir/BOINC-Manager.mo ] ; then \
-	    $(INSTALL) $$ldir/BOINC-Manager.mo $$mydir/$$ldir/BOINC-Manager.mo ; \
+	    $(INSTALL) "$$ldir/BOINC-Manager.mo" "$$mydir/$$ldir/BOINC-Manager.mo" ; \
